<div class="form-container comments">
    <h5 class="font-size-15"><i class="bx bx-message-dots text-muted align-middle me-1"></i> Comentarios :</h5>
    @{
        var comentarios = ViewBag.COMENTARIOS as List<Au_comentarios_mdp>;
    }

    @if (comentarios != null && comentarios.Any())
    {
        @foreach (var comentario in comentarios)
        {
            <div class="d-flex py-3">
                <div class="flex-shrink-0 me-3">
                    <div class="avatar-xs">
                        <div class="avatar-title rounded-circle bg-light text-primary">
                            <i class="bx bxs-user"></i>
                        </div>
                    </div>
                </div>
                <div class="flex-grow-1">
                    <h5 class="font-size-14 mb-1">@comentario.NOMBRE_USUARIO <small class="text-muted float-end">@comentario.FECHA_CREACION</small></h5>
                    <p class="text-muted">@comentario.NOTA</p>
                </div>
            </div>
            <hr>
        }
    }
    else
    {
        <p style="text-align:center">No hay comentarios para mostrar.</p>
    }

</div>